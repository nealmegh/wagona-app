<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="@dimen/dp_30"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="140dp"

        android:background="@drawable/reapet_tile"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/colorPrimaryDark">

            <com.wagona.maths.custom.CustomTextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:vFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/txtTitle"

                android:singleLine="true"
                android:text="Unfurnished"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                vFont:typeface="trebuchet_bold" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.wagona.maths.custom.CustomTextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:vFont="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dp"
                android:id="@+id/txtPrice"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_round_corner"
                android:gravity="center"

                android:singleLine="true"
                android:text="$0.55"
                android:textColor="@color/arc_red"
                android:textSize="25sp"
                vFont:typeface="trebuchet_bold" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>