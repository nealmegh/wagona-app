<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:vFont="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_45"
            android:paddingRight="@dimen/dp_45">

            <com.wagona.maths.custom.CustomTextView
                android:id="@+id/txtRightAns"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/round_btn_green"
                android:gravity="center"
                android:text="B"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_22"
                vFont:typeface="trebuchet_bold" />

            <WebView
                android:id="@+id/weviewAnsContent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtRightAns"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </WebView>


            <com.wagona.maths.custom.CustomTextView
                android:id="@+id/textAnsContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRightAns"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="34 New house 97-98 hatton Garden LONDON, EC1N 7JY United Kingdom"
                android:textColor="@color/dark_font"
                android:textSize="@dimen/sp_14"
                vFont:typeface="trebuchet_bold" />

            <View
                android:id="@+id/viewBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_05"
                android:layout_below="@+id/weviewAnsContent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/shadow_bg">

            </View>

            <LinearLayout
                android:id="@+id/socialContain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/viewBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/weviewContent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </WebView>

                <com.wagona.maths.custom.CustomTextView
                    android:id="@+id/textContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:text="34 New house\n97-98 hatton Garden\nLONDON, EC1N 7JY\nUnited Kingdom"
                    android:textColor="@color/dark_font"
                    android:textSize="@dimen/sp_14"
                    vFont:typeface="trebuchet_regular" />


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>



