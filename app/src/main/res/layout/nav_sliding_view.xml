<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vFont="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.65"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/dp_35"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shadow_bg" />

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:scaleType="centerCrop"
                android:src="@drawable/social_channels" />
        </LinearLayout>

        <com.wagona.maths.custom.CustomTextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="Irvin J. Massey"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_22"
            vFont:typeface="trebuchet_bold" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:orientation="vertical">


        <com.wagona.maths.custom.CustomTextView
            android:id="@+id/textEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="Edit Profile"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_24"
            vFont:typeface="trebuchet_regular" />


        <com.wagona.maths.custom.CustomTextView
            android:id="@+id/textAboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="About Us"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_24"
            vFont:typeface="trebuchet_regular" />

        <com.wagona.maths.custom.CustomTextView
            android:id="@+id/textHowitWorks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="How its Works"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_24"
            vFont:typeface="trebuchet_regular" />

        <com.wagona.maths.custom.CustomTextView
            android:id="@+id/textContactUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="Contact Us"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_24"
            vFont:typeface="trebuchet_regular" />

        <com.wagona.maths.custom.CustomTextView

            android:id="@+id/textPaypal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="Upgrade Account"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_24"
            vFont:typeface="trebuchet_regular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <com.wagona.maths.custom.CustomTextView
            android:id="@+id/textLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/logout"
            android:drawablePadding="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="Logout"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/sp_24"
            vFont:typeface="trebuchet_bold" />

    </LinearLayout>


</LinearLayout>

